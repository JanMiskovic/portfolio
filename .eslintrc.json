{
    "parserOptions": {
      "ecmaFeatures": { "jsx": true, "modules": true },
      "ecmaVersion": 13,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime"
    ],
    "plugins": ["react"],
    "rules": {
      "indent": ["error", 4],
      "quotes": ["error", "double"],
      "semi": ["error", "always"],
      "react/prop-types": [0]
    },
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    }
}
  